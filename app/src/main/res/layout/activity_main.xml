<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="70dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="#FEEBC1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/coolicon" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp">
                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Satya Nilayam"
                            android:fontFamily="@font/letters"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-4dp"
                            android:text="21-42-34, Banjara Hills, \nHyderabad, 500072"
                            android:fontFamily="@font/letters"
                            android:textSize="10sp"
                            android:textColor="#686868"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Address"
                        android:fontFamily="@font/letters"
                        android:textSize="11sp"
                        android:layout_marginLeft="90dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="15dp">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/clock"
                        android:background="@drawable/shape"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="30 mins"
                            android:fontFamily="@font/letters"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_marginLeft="25dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Schedule time"
                        android:fontFamily="@font/letters"
                        android:textSize="11sp"
                        android:layout_marginLeft="130dp"
                        android:textColor="@color/black"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/image_linear"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Fried Rice"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="#0A191E"
                    android:fontFamily="@font/letters"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pista House"
                    android:layout_marginTop="-6dp"
                    android:textColor="#0A191E"
                    android:textSize="12sp"
                    android:fontFamily="@font/letters"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="User 1"
                    android:textColor="#050505"
                    android:textSize="14sp"
                    android:fontFamily="@font/letters"
                    />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                app:cornerRadius="20dp"
                android:backgroundTint="@color/white"
                app:strokeColor="#F8774A"
                app:strokeWidth="2dp"
                android:layout_marginLeft="60dp">

            </com.google.android.material.button.MaterialButton>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="₹100"
                android:layout_marginLeft="5dp"
                android:textColor="#050505"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:layout_marginTop="-10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/image_second"
                android:scaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Jollof Rice"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:textColor="#0A191E"
                    android:fontFamily="@font/letters"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Suhani’s Stop"
                    android:layout_marginTop="-6dp"
                    android:textColor="#0A191E"
                    android:textSize="12sp"
                    android:fontFamily="@font/letters"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="User 2"
                    android:textColor="#050505"
                    android:textSize="14sp"
                    android:fontFamily="@font/letters"
                    />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                app:cornerRadius="20dp"
                android:backgroundTint="@color/white"
                app:strokeColor="#F8774A"
                app:strokeWidth="2dp"
                android:layout_marginLeft="53dp">

            </com.google.android.material.button.MaterialButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="₹125"
                android:layout_marginLeft="5dp"
                android:textColor="#050505"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            >

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Enter Promo Code"
                android:textStyle="bold"
                android:textColorHint="#838383"
                android:fontFamily="@font/letters"
                android:paddingStart="20dp"
                android:textSize="12sp"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button2"
                android:layout_width="104dp"
                android:layout_height="47dp"
                android:text="Apply"
                android:textAllCaps="false"
                android:layout_marginLeft="60dp"
                android:fontFamily="@font/letters"
                android:backgroundTint="#F8774A"
                app:cornerRadius="20dp"
                android:textSize="14sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="85dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="35dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Subtotal"
                    android:textStyle="bold"
                    android:fontFamily="@font/letters"
                    android:textColor="#0A191E"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery"
                    android:layout_marginTop="-5dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/letters"
                    android:textColor="#0A191E"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textStyle="bold"
                    android:fontFamily="@font/letters"
                    android:textColor="#0A191E"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="225"
                    android:textStyle="bold"
                    android:layout_marginLeft="210dp"
                    android:textSize="14dp"
                    android:fontFamily="@font/letter_word"
                    android:textColor="#0A191E"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹45"
                    android:layout_marginTop="-5dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="210dp"
                    android:textSize="14dp"
                    android:fontFamily="@font/letter_word"
                    android:textColor="#0A191E"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹270"
                    android:textSize="20dp"
                    android:layout_marginLeft="190dp"
                    android:textStyle="bold"
                    android:fontFamily="@font/letters"
                    android:textColor="#0A191E"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="85dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/button3"
                android:layout_width="160dp"
                android:layout_height="55dp"
                app:cornerRadius="25dp"
                android:text="Payment   ->"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:fontFamily="@font/letters"
                android:backgroundTint="#F8774A"/>
            <com.google.android.material.button.MaterialButton
                android:layout_width="160dp"
                android:layout_height="55dp"
                android:layout_marginStart="50dp"
                app:cornerRadius="25dp"
                android:text="Select User   ->"
                android:textAllCaps="false"
                android:textSize="14dp"
                android:fontFamily="@font/letters"
                android:backgroundTint="#F8774A"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="376dp"
            android:layout_height="90dp"
            android:layout_marginTop="-20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40dp"
                app:srcCompat="@drawable/discovery" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="60dp"
                app:srcCompat="@drawable/vector"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="60dp"
                app:srcCompat="@drawable/_bag___3"
                android:background="@drawable/shape_end"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="CART"
                android:layout_marginLeft="5dp"
                android:textStyle="bold"
                android:textColor="#FF6838"/>
        </LinearLayout>
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>